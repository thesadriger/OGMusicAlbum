{
  "name": "ogma",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -s first -n web,api \"npm:dev:web\" \"npm:dev:api\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:api": "bash -lc 'cd /home/ogma/ogma && [ -f app/api/.venv/bin/activate ] && source app/api/.venv/bin/activate || true; set -a; [ -r /etc/ogma/ogma-api.env ] && . /etc/ogma/ogma-api.env; [ -f app/api/.env ] && . app/api/.env; set +a; uvicorn app.api.main:app --host 127.0.0.1 --port 8080 --reload --log-level debug'",
    "dev:web": "vite --port 5173 --strictPort",
    "pw": "playwright test",
    "pw:update": "playwright test --update-snapshots",
    "pw:report": "playwright show-report",
    "test:android": "playwright test -g 'Pixel 7'"
  },
  "dependencies": {
    "@gsap/react": "^2.1.1",
    "@openai/codex": "^0.50.0",
    "@prisma/client": "^6.18.0",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@react-three/postprocessing": "^3.0.4",
    "@twa-dev/sdk": "^8.0.2",
    "axios": "^1.12.2",
    "classnames": "^2.5.1",
    "fiber": "^1.0.4",
    "gsap": "^3.13.0",
    "install": "^0.13.0",
    "motion": "^12.23.24",
    "npm": "^11.6.2",
    "ogl": "^1.0.11",
    "postprocessing": "^6.37.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-swipeable": "^7.0.2",
    "swr": "^2.3.6",
    "three": "^0.180.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^24.7.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "http-proxy": "^1.18.1",
    "postcss": "^8.5.6",
    "prisma": "^6.18.0",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
